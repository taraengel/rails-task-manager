

<h1>All Tasks</h1>

<ul>
  <% @tasks.each do |task| %>

  <% if task.completed == true %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <li><%= link_to "#{task.title}", task_path(task.id)%></li>
  <% end %>
</ul>

<p><%= link_to "new task", new_task_path %></p>
