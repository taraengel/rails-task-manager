<h1><%= @task.title %></h1>

<% if @task.completed == true %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
<p><%= @task.details %></p>

<%= link_to "Back to all Tasks", tasks_path %>
<%= link_to "Edit task", edit_task_path(@task.id) %>
<%= link_to "Delete task", task_path(@task.id), method: :delete %>
